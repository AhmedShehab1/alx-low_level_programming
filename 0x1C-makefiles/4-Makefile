# variables
CC := gcc
SRC := $(wildcard *.c)
OBJ := $(SRC:%.c=%.o)
NAME := school
CFLAGS := -Wall -Werror -Wextra -pedantic
RM := rm -f

all : ${OBJ} build

%.o : %.c
	${CC} ${CFLAGS} -c -o $@ $<

build :
	$(CC) $(CFLAGS) ${OBJ} -o $(NAME)

clean :
	${RM} *~ ${NAME}

oclean :
	${RM} ${OBJ}

fclean : clean oclean

re : oclean all
